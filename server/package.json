{
  "name": "lol-server",
  "version": "1.0.0",
  "description": "Colyseus Server for Legends of Learning",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && npm run copy-maps",
    "copy-maps": "node -e \"const fs=require('fs');const path=require('path');const src='src/maps';const dest='build/maps';if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).filter(f=>f.endsWith('.json')).forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dest,f)));console.log('Maps copied!');\""
  },
  "dependencies": {
    "@colyseus/monitor": "^0.15.0",
    "@colyseus/playground": "^0.15.0",
    "@colyseus/schema": "^2.0.0",
    "colyseus": "^0.15.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}