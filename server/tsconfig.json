{
    "compilerOptions": {
        "outDir": "./build",
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ]
}